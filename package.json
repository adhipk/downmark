{
  "name": "downmark",
  "version": "1.0.0",
  "description": "Convert any webpage to clean Markdown using Chrome headless and Readability",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "bin": {
    "downmark": "index.ts"
  },
  "scripts": {
    "cli": "bun run index.ts",
    "build:frontend": "bun build.ts",
    "dev:pandoc": "cd pandoc-service && bun server.ts",
    "dev": "bun run build:frontend && bun --hot server.tsx",
    "dev:all": "bun run build:frontend && (cd pandoc-service && bun server.ts &) && bun --hot server.tsx",
    "build": "bun run build:frontend && NODE_ENV=production bun build ./server.tsx --compile --outfile downmark",
    "start": "bun run build:frontend && NODE_ENV=production bun run server.tsx",
    "start:all": "bun run build:frontend && (cd pandoc-service && bun server.ts &) && NODE_ENV=production bun run server.tsx",
    "docker:build": "docker build -t downmark .",
    "docker:run": "docker run -p 3000:3000 downmark",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "vercel-build": "bun run build:frontend",
    "deploy:vercel": "vercel --prod",
    "tsc":"bunx tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "tailwindcss": "^4.1.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.3.1",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "puppeteer": "^24.34.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
