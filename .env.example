# Server Configuration
PORT=3000
HOST=0.0.0.0

# Authentication (Passkeys/WebAuthn)
AUTH_ENABLED=false
RP_NAME=Downmark
RP_ID=localhost
ORIGIN=http://localhost:3000

# Browser Configuration
BROWSER_TIMEOUT=30000
BROWSER_WAIT_TIMEOUT=10000
BROWSER_REFERER=https://www.google.com/
BROWSER_WAIT_STRATEGY=domcontentloaded

# Content Extraction
EXTRACTOR_CHAR_THRESHOLD=100

# Pandoc Configuration
PANDOC_OUTPUT_FORMAT=gfm

# AI Renderer Configuration
# Enable AI-powered content refinement (requires API key)
AI_RENDERER_ENABLED=false

# Choose ONE of the following API providers:

# Option 1: Anthropic Claude (recommended)
# ANTHROPIC_API_KEY=sk-ant-api03-...

# Option 2: OpenAI
# OPENAI_API_KEY=sk-...

# Optional: Customize the model (defaults shown below)
# For Anthropic:
# AI_RENDERER_MODEL=claude-3-5-haiku-20241022
# AI_RENDERER_ENDPOINT=https://api.anthropic.com/v1/messages

# For OpenAI:
# AI_RENDERER_MODEL=gpt-4o-mini
# AI_RENDERER_ENDPOINT=https://api.openai.com/v1/chat/completions

# Timeout for AI API requests in milliseconds (default: 30000 = 30s)
# AI_RENDERER_TIMEOUT=30000
